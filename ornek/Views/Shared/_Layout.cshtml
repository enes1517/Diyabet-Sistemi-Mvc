<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Diyabet Takip Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-heartbeat me-2"></i>Diyabet Takip Sistemi
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("UserType") != null)
                        {
                            @if (Context.Session.GetString("UserType") == "Doktor")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Doctor" asp-action="Index">Ana Sayfa</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Doctor" asp-action="Patients">Hastalarım</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Doctor" asp-action="Alerts">Uyarılar</a>
                                </li>
                            }
                            else if (Context.Session.GetString("UserType") == "Hasta")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Patient" asp-action="Index">Ana Sayfa</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Patient" asp-action="BloodSugar">Kan Şekeri</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Patient" asp-action="Diet">Diyet</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Patient" asp-action="Exercise">Egzersiz</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Patient" asp-action="Insulin">İnsülin</a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("UserType") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i>Hesabım
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profil</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Çıkış Yap</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container text-center py-3">
            &copy; @DateTime.Now.Year - Diyabet Takip Sistemi - Kocaeli Üniversitesi Bilgisayar Mühendisliği
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>