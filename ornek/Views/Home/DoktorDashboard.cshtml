<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doktor Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Doktor Paneli</h2>
        <div class="mb-3">
            <a asp-action="AddHasta" class="btn btn-success">Yeni Hasta Ekle</a>
            <a asp-action="Login" class="btn btn-danger float-end">Çıkış Yap</a>
        </div>
        <h4>Hastalarım</h4>
        @if (Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>E-posta</th>
                        <th>Boy (cm)</th>
                        <th>Kilo (kg)</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var hasta in Model)
                    {
                        <tr>
                            <td>@hasta.Kullanici.Ad</td>
                            <td>@hasta.Kullanici.Soyad</td>
                            <td>@hasta.Kullanici.Email</td>
                            <td>@(hasta.Boy?.ToString("F0") ?? "-")</td>
                            <td>@(hasta.Kilo?.ToString("F0") ?? "-")</td>
                            <td>
                                <a asp-action="AddUyari" asp-route-hastaID="@hasta.HastaID" class="btn btn-warning btn-sm">Uyarı Ekle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center">Henüz hastanız bulunmamaktadır.</p>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>