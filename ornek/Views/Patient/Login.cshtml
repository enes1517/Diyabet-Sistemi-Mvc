<!-- Login.cshtml -->
@model dynamic
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Giriş Yap</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="Login" asp-controller="Account" method="post">
        <div class="form-group mb-3">
            <label class="form-label" for="tc">TC Kimlik No</label>
            <input type="text" class="form-control" id="tc" name="tc" pattern="[0-9]{11}" required title="TC Kimlik No 11 haneli olmalıdır." />
        </div>
        <div class="form-group mb-3">
            <label class="form-label" for="sifre">Şifre</label>
            <input type="password" class="form-control" id="sifre" name="sifre" required />
        </div>
        <button type="submit" class="btn btn-primary">Giriş Yap</button>
    </form>
</div>