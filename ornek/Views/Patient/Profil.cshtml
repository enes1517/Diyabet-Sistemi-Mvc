<!-- Profil.cshtml -->
     @model Proje3.Models.PatientProfileViewModel
@{
    ViewData["Title"] = "Profil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Profil</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card">
        <div class="card-header">
            <h5>Kullanıcı Bilgileri</h5>
        </div>
        <div class="card-body">
            @if (Model != null)
            {
                <form asp-action="ProfilGuncelle" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Ad</label>
                                <input type="text" name="ad" class="form-control" value="@Model.Ad" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Soyad</label>
                                <input type="text" name="soyad" class="form-control" value="@Model.Soyad" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">E-posta</label>
                                <input type="email" name="email" class="form-control" value="@Model.Email" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Boy (cm)</label>
                                <input type="number" step="0.01" name="boy" class="form-control" min="50" max="250" value="@(Model.Boy.HasValue ? Model.Boy.Value.ToString(System.Globalization.CultureInfo.InvariantCulture) : "")" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Kilo (kg)</label>
                                <input type="number" step="0.01" name="kilo" class="form-control" min="20" max="300" value="@(Model.Kilo.HasValue ? Model.Kilo.Value.ToString(System.Globalization.CultureInfo.InvariantCulture) : "")" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Profil Resmi</label>
                                <input type="file" name="profilResim" class="form-control" accept="image/*" />
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        @if (Model.HasProfilResim)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProfilResim)" alt="Profil Resmi" class="img-thumbnail" style="max-width: 150px;" />
                        }
                    </div>
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </form>

                <!-- Password Change Form -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h5>Şifre Değiştir</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="SifreDegistir" method="post">
                            <div class="mb-3">
                                <label class="form-label">Eski Şifre</label>
                                <input type="password" name="eskiSifre" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Yeni Şifre</label>
                                <input type="password" name="yeniSifre" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Yeni Şifre Tekrar</label>
                                <input type="password" name="yeniSifreTekrar" class="form-control" required />
                            </div>
                            <button type="submit" class="btn btn-primary">Şifreyi Değiştir</button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <p class="text-danger">Kullanıcı bilgileri yüklenemedi.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}