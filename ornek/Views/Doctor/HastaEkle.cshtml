@{
    ViewData["Title"] = "Yeni Hasta Tanıt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <h2>Yeni Hasta Tanıt</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card">
        <div class="card-header">Hasta Bilgileri</div>
        <div class="card-body">
            <form asp-action="HastaEkle" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Ad</label>
                    <input type="text" name="ad" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Soyad</label>
                    <input type="text" name="soyad" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>T.C. Kimlik Numarası</label>
                    <input type="text" name="tc" class="form-control" pattern="[0-9]{11}" required title="T.C. Kimlik Numarası 11 haneli olmalıdır." />
                </div>
                <div class="form-group">
                    <label>E-posta</label>
                    <input type="email" name="email" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Doğum Tarihi</label>
                    <input type="date" name="dogumTarihi" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Cinsiyet</label>
                    <select name="cinsiyet" class="form-control" required>
                        <option value="Erkek">Erkek</option>
                        <option value="Kadın">Kadın</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Boy (cm)</label>
                    <input type="number" step="0.1" name="boy" class="form-control" required min="50" max="250" />
                </div>
                <div class="form-group">
                    <label>Kilo (kg)</label>
                    <input type="number" step="0.1" name="kilo" class="form-control" required min="20" max="300" />
                </div>
                <div class="form-group">
                    <label>Profil Resmi (Opsiyonel)</label>
                    <input type="file" name="profilResim" class="form-control" accept="image/*" />
                </div>
                <button type="submit" class="btn btn-success">Hastayı Tanıt</button>
            </form>
        </div>
    </div>
</div>