<!-- Profil.cshtml -->
<!-- Doctor profile management -->
@{
    ViewData["Title"] = "Doktor Profili";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <h2>Profil</h2>

    <!-- Profile Update Form -->
    <div class="card mb-4">
        <div class="card-header">Profil Bilgileri</div>
        <div class="card-body">
            @if (ViewBag.Kullanici != null)
            {
                <form asp-action="ProfilGuncelle" method="post" enctype="multipart/form-data">
                    <div class="form-group mb-3">
                        <label class="form-label">Ad</label>
                        <input type="text" name="ad" class="form-control" value="@ViewBag.Kullanici["Ad"]" required />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Soyad</label>
                        <input type="text" name="soyad" class="form-control" value="@ViewBag.Kullanici["Soyad"]" required />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">E-posta</label>
                        <input type="email" name="email" class="form-control" value="@ViewBag.Kullanici["Email"]" required />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Uzmanlık</label>
                        <input type="text" name="uzmanlik" class="form-control" value="@(ViewBag.Doktor != null && !DBNull.Value.Equals(ViewBag.Doktor["Uzmanlik"]) ? ViewBag.Doktor["Uzmanlik"] : "")" />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Profil Resmi</label>
                        <input type="file" name="profilResim" class="form-control" accept="image/*" />
                        @if (!DBNull.Value.Equals(ViewBag.Kullanici["ProfilResim"]))
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String((byte[])ViewBag.Kullanici["ProfilResim"])" alt="Profil Resmi" class="img-thumbnail mt-2" style="max-width: 100px;" />
                        }
                    </div>
                    <button type="submit" class="btn btn-success">Güncelle</button>
                </form>
            }
            else
            {
                <p class="text-danger">Kullanıcı bilgileri yüklenemedi.</p>
            }
        </div>
    </div>

    <!-- Password Change Form -->
    <div class="card">
        <div class="card-header">Şifre Değiştir</div>
        <div class="card-body">
            <form asp-action="SifreDegistir" method="post">
                <div class="form-group mb-3">
                    <label class="form-label">Eski Şifre</label>
                    <input type="password" name="eskiSifre" class="form-control" required />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Yeni Şifre</label>
                    <input type="password" name="yeniSifre" class="form-control" required />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Yeni Şifre Tekrar</label>
                    <input type="password" name="yeniSifreTekrar" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-success">Şifreyi Değiştir</button>
            </form>
        </div>
    </div>
</div>