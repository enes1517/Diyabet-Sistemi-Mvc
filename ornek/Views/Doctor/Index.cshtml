<!-- Index.cshtml -->
@{
    ViewData["Title"] = "Doktor Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <h2 class="mb-4">Doktor Ana Sayfa</h2>

    <!-- Mesajlar -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Doktor Bilgileri -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Doktor Bilgileri</h5>
        </div>
        <div class="card-body">
            @if (ViewBag.DoktorBilgi != null && ViewBag.DoktorBilgi.Rows.Count > 0)
            {
                var doktor = ViewBag.DoktorBilgi.Rows[0];
                <div class="row align-items-center">
                    <div class="col-md-3 text-center">
                        @if (!DBNull.Value.Equals(doktor["ProfilResim"]))
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String((byte[])doktor["ProfilResim"])" alt="Profil Resmi" class="img-fluid rounded-circle" style="max-width: 120px;" />
                        }
                        else
                        {
                            <img src="/images/default-profile.png" alt="Varsayılan Profil Resmi" class="img-fluid rounded-circle" style="max-width: 120px;" />
                        }
                    </div>
                    <div class="col-md-9">
                        <p class="mb-2"><strong>Ad Soyad:</strong> @doktor["Ad"] @doktor["Soyad"]</p>
                        <p class="mb-2"><strong>E-posta:</strong> @doktor["Email"]</p>
                        <p class="mb-2"><strong>TC:</strong> @doktor["TC"]</p>
                    </div>
                </div>
            }
            else
            {
                <p class="text-danger">Doktor bilgileri yüklenemedi.</p>
            }
        </div>
    </div>

    <!-- Hasta Filtresi -->
<div class="card shadow-sm mb-5">
    <div class="card-header bg-secondary text-white">
        <h5 class="mb-0">Hasta Filtresi</h5>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-2">
                <label for="adFilter" class="form-label">İsim</label>
                <input type="text" id="adFilter" name="adFilter" class="form-control" value="@(ViewBag.AdFilter ?? "")" placeholder="Ör: Ahmet" />
            </div>
            <div class="col-md-2">
                <label for="soyadFilter" class="form-label">Soyisim</label>
                <input type="text" id="soyadFilter" name="soyadFilter" class="form-control" value="@(ViewBag.SoyadFilter ?? "")" placeholder="Ör: Yılmaz" />
            </div>
            <div class="col-md-2">
                <label for="tcFilter" class="form-label">T.C. Kimlik No</label>
                <input type="text" id="tcFilter" name="tcFilter" class="form-control" value="@(ViewBag.TcFilter ?? "")" placeholder="Ör: 12345678901" maxlength="11" />
            </div>
            <div class="col-md-3">
                <label for="bloodSugarFilter" class="form-label">Kan Şekeri Filtresi</label>
                <select id="bloodSugarFilter" name="bloodSugarFilter" class="form-select">
                            <option value="" selected="@(string.IsNullOrEmpty(ViewBag.BloodSugarFilter))">Tümü</option>
                            <option value="> 180" selected="@(ViewBag.BloodSugarFilter == "> 180")">Yüksek (> 180 mg/dL)</option>
                            <option value="< 70" selected="@(ViewBag.BloodSugarFilter == "< 70")">Düşük (< 70 mg/dL)</option>
                            <option value="BETWEEN 70 AND 180" selected="@(ViewBag.BloodSugarFilter == "BETWEEN 70 AND 180")">Normal (70-180 mg/dL)</option>
                </select>
            </div>
            <div class="col-md-2">
                <label for="symptomFilter" class="form-label">Belirti Filtresi</label>
                <input type="text" id="symptomFilter" name="symptomFilter" class="form-control" value="@(ViewBag.SymptomFilter ?? "")" placeholder="Ör: Yorgunluk" />
            </div>
            <div class="col-md-1 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Filtrele</button>
            </div>
        </form>
    </div>
</div>













    

    <!-- Hastalar Listesi -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Hastalarım</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Ad Soyad</th>
                            <th>TC</th>
                            <th>E-posta</th>
                            <th>Boy (cm)</th>
                            <th>Kilo (kg)</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.Hastalar != null && ViewBag.Hastalar.Rows.Count > 0)
                        {
                            foreach (System.Data.DataRow hasta in ViewBag.Hastalar.Rows)
                            {
                                <tr>
                                    <td>@hasta["Ad"] @hasta["Soyad"]</td>
                                    <td>@hasta["TC"]</td>
                                    <td>@hasta["Email"]</td>
                                    <td>@hasta["Boy"]</td>
                                    <td>@hasta["Kilo"]</td>
                                    <td>
                                        <a href="@Url.Action("HastaDetay", "Doctor", new { id = hasta["HastaID"] })" class="btn btn-primary btn-sm">Detay</a>
                                        <a href="@Url.Action("HastaArsiv", "Doctor", new { id = hasta["HastaID"] })" class="btn btn-info btn-sm">Arşiv</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">Kayıtlı hasta bulunmamaktadır.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a href="@Url.Action("HastaEkle", "Doctor")" class="btn btn-success mt-3">Yeni Hasta Ekle</a>
        </div>
    </div>

    <!-- Uyarılar -->
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Okunmamış Uyarılar</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Hasta</th>
                            <th>Uyarı Türü</th>
                            <th>Mesaj</th>
                            <th>Tarih</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.Uyarilar != null && ViewBag.Uyarilar.Rows.Count > 0)
                        {
                            foreach (System.Data.DataRow uyari in ViewBag.Uyarilar.Rows)
                            {
                                <tr>
                                    <td>@uyari["HastaAdSoyad"]</td>
                                    <td>@uyari["UyariTuru"]</td>
                                    <td>@uyari["UyariMesaji"]</td>
                                    <td>@Convert.ToDateTime(uyari["UyariTarihi"]).ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">Okunmamış uyarı bulunmamaktadır.</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>

        @section Scripts {
            <script>
                // Filtreleme formu için istemci tarafı doğrulaması (isteğe bağlı)
                document.querySelector('form').addEventListener('submit', function (e) {
                    const symptomFilter = document.querySelector('#symptomFilter').value;
                    if (symptomFilter.length > 50) {
                        e.preventDefault();
                        alert('Belirti filtresi 50 karakterden uzun olamaz.');
                    }
                });
            </script>
        }
